#!/bin/dash

print_file() {
echo "$LINE" | cut -f2
}

print_to_yad() {
du -chs -t 1K --apparent-size "$@" | while read LINE; do
SIZE=$(echo -n "$LINE" | cut -f1)
echo -n "$SIZE"' \t'
basename "$(print_file)"
done
}

print_to_yad "$@" | exec yad --title="How Big?" --window-icon=tool-measure \
 --width=300 --height=350 --mouse --text-info --tail --button=Close\!gtk-close
